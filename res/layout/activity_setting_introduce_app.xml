<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

 	<RadioGroup
 	    android:visibility="invisible"
 	    android:id="@+id/app_bottom"
 	    android:layout_marginBottom="8dp"
 	    android:layout_width="wrap_content"
 	    android:layout_height="wrap_content"
 	    android:layout_alignParentBottom="true"
 	    android:layout_centerHorizontal="true"
 	    android:orientation="horizontal"
 	    android:weightSum="4" >

 	    <ImageView 
 	        android:id="@+id/img_point_1"
 	        android:padding="4dp"
 	        android:layout_weight="1"
 	        android:layout_gravity="center"
 	        android:layout_height="match_parent"
 	        android:layout_width="match_parent"
 	        android:src="@drawable/selector_point"
 	        />
 	    <ImageView 
 	                android:id="@+id/img_point_2"
 	                android:padding="4dp"
 	                android:layout_weight="1"
 	        android:layout_height="match_parent"
 	        android:layout_width="match_parent"
 	        android:src="@drawable/selector_point"
 	        />
 	    <ImageView 
 	                android:id="@+id/img_point_3"
 	                android:padding="4dp"
 	               android:layout_weight="1"
 	        android:layout_height="match_parent"
 	        android:layout_width="match_parent"
 	        android:src="@drawable/selector_point"
 	        />

 	    <ImageView        android:id="@+id/img_point_4"
 	                android:padding="4dp"
 	               android:layout_weight="1"
 	        android:layout_width="match_parent"
 	        android:layout_height="match_parent"
 	        android:src="@drawable/selector_point"
 	       />
 	    
 	</RadioGroup>
 	<android.support.v4.view.ViewPager
 	    android:layout_above="@id/app_bottom"
 	    android:id="@+id/vp_instroduce_app"
 	    android:layout_width="match_parent"
 	    android:layout_height="match_parent"
 	    >
 	    
 	</android.support.v4.view.ViewPager>

</RelativeLayout>
